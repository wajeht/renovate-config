{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major"],
      "groupName": "TypeScript"
    },
    {
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@types/"],
      "automerge": true,
      "groupName": "type definitions"
    }
  ]
}
