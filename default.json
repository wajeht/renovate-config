{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":pinDigestsDisabled",
    ":disableRateLimiting",
    ":maintainLockFilesWeekly",
    "helpers:pinGitHubActionDigestsToSemver",
    "replacements:all",
    "github>wajeht/renovate-config:nonMajorAutomerge",
    "github>wajeht/renovate-config:labels",
    "github>wajeht/renovate-config:dockerCompose",
    "github>wajeht/renovate-config:go",
    "github>wajeht/renovate-config:githubActions",
    "github>wajeht/renovate-config:node",
    "github>wajeht/renovate-config:vue",
    "github>wajeht/renovate-config:vite",
    "github>wajeht/renovate-config:tailwind",
    "github>wajeht/renovate-config:typescript",
    "github>wajeht/renovate-config:linting",
    "github>wajeht/renovate-config:versionRules",
    ":configMigration",
    "docker:enableMajor"
  ],
  "timezone": "America/Chicago",
  "schedule": ["after 12am and before 6am"],
  "rebaseWhen": "conflicted",
  "transitiveRemediation": true,
  "gitIgnoredAuthors": ["29139614+renovate[bot]@users.noreply.github.com"],
  "platformAutomerge": true,
  "internalChecksFilter": "strict",
  "prCreation": "not-pending",
  "prNotPendingHours": 2,
  "separateMultipleMajor": true,
  "configWarningReuseIssue": true,
  "suppressNotifications": ["prEditedNotification"],
  "rollbackPrs": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "postUpdateOptions": ["npmDedupe"],
  "lockFileMaintenance": {
    "automerge": true,
    "automergeType": "branch"
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true,
    "prPriority": 10,
    "schedule": ["at any time"],
    "minimumReleaseAge": "0 days"
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["replacement"],
      "automerge": true,
      "minimumReleaseAge": "0 days"
    }
  ]
}
