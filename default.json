{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":pinDigestsDisabled",
    ":disableRateLimiting",
    ":maintainLockFilesMonthly",
    "helpers:pinGitHubActionDigestsToSemver",
    "github>wajeht/renovate-config:nonMajorAutomerge",
    "github>wajeht/renovate-config:labels",
    "github>wajeht/renovate-config:dockerCompose",
    "github>wajeht/renovate-config:go",
    "github>wajeht/renovate-config:githubActions",
    "github>wajeht/renovate-config:vite",
    "github>wajeht/renovate-config:versionRules",
    ":configMigration",
    "docker:enableMajor"
  ],
  "timezone": "America/Chicago",
  "schedule": ["after 12pm and before 9am every weekday", "every weekend"],
  "rebaseWhen": "conflicted",
  "transitiveRemediation": true,
  "gitIgnoredAuthors": ["29139614+renovate[bot]@users.noreply.github.com"],
  "platformAutomerge": true,
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  }
}
