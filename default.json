{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":pinDigestsDisabled",
    ":disableRateLimiting",
    "helpers:pinGitHubActionDigestsToSemver",
    "github>wajeht/renovate-config:nonMajorAutomerge",
    "github>wajeht/renovate-config:labels",
    "github>wajeht/renovate-config:dockerCompose",
    "github>wajeht/renovate-config:go",
    "github>wajeht/renovate-config:githubActions",
    ":configMigration",
    "docker:enableMajor"
  ],
  "timezone": "America/Chicago",
  "schedule": ["after 10pm and before 5am every weekday", "every weekend"],
  "rebaseWhen": "conflicted",
  "transitiveRemediation": true,
  "gitIgnoredAuthors": ["29139614+renovate[bot]@users.noreply.github.com"],
  "platformAutomerge": true,
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 4am on monday"]
  }
}
