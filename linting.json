{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepPatterns": [
        "^eslint",
        "^@eslint/",
        "^@typescript-eslint/",
        "^eslint-plugin-",
        "^eslint-config-",
        "^@stylistic/"
      ],
      "automerge": true,
      "groupName": "ESLint"
    },
    {
      "matchManagers": ["npm"],
      "matchDepPatterns": ["^prettier", "^@prettier/", "^prettier-plugin-"],
      "automerge": true,
      "groupName": "Prettier"
    },
    {
      "matchManagers": ["npm"],
      "matchDepPatterns": ["^oxlint", "^@oxlint/", "^oxc-", "^@oxc-"],
      "automerge": true,
      "groupName": "OXC"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchDepPatterns": ["^vitest", "^@vitest/", "^cypress", "^jest", "^@testing-library/", "^playwright", "^@playwright/"],
      "automerge": true,
      "groupName": "testing tools"
    }
  ]
}
