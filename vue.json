{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^vue", "^@vue/", "^@vitejs/plugin-vue", "^vue-router", "^pinia", "^@pinia/"],
      "matchUpdateTypes": ["major"],
      "groupName": "Vue"
    },
    {
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^nuxt", "^@nuxt/", "^@nuxtjs/"],
      "matchUpdateTypes": ["major"],
      "groupName": "Nuxt"
    }
  ]
}
